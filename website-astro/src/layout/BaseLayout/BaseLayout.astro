---
import Header from "./Header"
import Footer from "./Footer"

import layoutStyles from "~/styles/src/layout/layout.module.scss"

import "~/styles/src/global.scss"
import "~/styles/src/reset.scss"
import "~/styles/src/typography.scss"

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />

  <!-- google fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@400;500;600&display=swap" rel="stylesheet">
	
  <title>{title}</title>
</head>
<body>
  <div id="__root">
    <Header />
    <main class={layoutStyles.main}>
      <slot />
    </main>
    <Footer />
  </div>
</body>
</html>